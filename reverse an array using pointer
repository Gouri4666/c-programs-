#include <stdio.h>
#include <stdlib.h>
//Reverse a string using pointer

int main() 
{
	int n,*arr,i;
	int *start,*end,temp;
	printf("Enter n:");
	scanf("%d",&n);
	arr=(int *)malloc(n*sizeof(int));
	printf("Enter Array:\n");
	for(i=0;i<n;i++)
	{
	printf("Enter element %d:",(i+1));
	scanf("%d",arr+i);
	}
	start=arr;
	end=arr+n-1;
	while(start<end)
	{
		temp=*start;
		*start=*end;
		*end=temp;
		*start++;
		*end--;
	}
	printf("\nReversed Array:");
	for(i=0;i<n;i++)
	printf("%d ",*(arr+i));
	return 0;
}
