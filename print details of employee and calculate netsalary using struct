#include <stdio.h>
struct date
{
    int dd,mm,yy;   
};
struct employee
{
    int empid;
    char name[20];
    float salary;
    struct date join;
}e[20];
void read(int i)
{
    printf("Enter Employee %d Id:",(i+1));
    scanf("%d",&e[i].empid);
    printf("Enter Employee name:");
    scanf("%s",e[i].name);
    printf("Enter Employee salary:");
    scanf("%f",&e[i].salary);
    printf("Enter Joining Date:");
    scanf("%d-%d-%d",&e[i].join.dd,&e[i].join.mm,&e[i].join.yy);  
}
float calculate(int i)
{
    float hra,da,pf,netsalary;
    hra=0.15*e[i].salary;
    da=0.2*e[i].salary;
    pf=0.12*e[i].salary;
    netsalary=e[i].salary+hra+da-pf;
    return netsalary;
}
void write(int i)
{
    printf("\nEmployee %d Details",(i+1));
    printf("\nId:%d",e[i].empid);
    printf("\nName:%d",e[i].name);
    printf("\nSalary:%f",e[i].salary);
    printf("\nJoining Date:%d-%d-%d",e[i].join.dd,e[i].join.mm,e[i].join.yy);
}
int main() 
{
    int n,i;
    printf("Enter n:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    read(i);
    for(i=0;i<n;i++)
    {
    write(i);
     printf("\nNet salary=%f",calculate(i));
    }
    return 0;
}
