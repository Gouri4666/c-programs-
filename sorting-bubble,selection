#include<stdio.h>
void bubble(int a[],int *n)
{
	int i,j,temp;
	printf("Array before: ");
	for(i=0;i<*n;i++)
	printf("%d ",a[i]);
	printf("\n");
	for(i=0;i<*n-1;i++)
	{
		for(j=0;j<*n-i-1;j++)
		{
		if(a[j]>a[j+1])
		{
			temp=a[j];
			a[j]=a[j+1];
			a[j+1]=temp;
		}
		}
	printf("Iteration %d: ",i+1);
	for(int k=0;k<*n;k++)
	printf("%d ",a[k]);
	printf("\n");
	}
}
void selection(int a[],int *n)
{
	int i,j,temp,min;
	printf("Array before: ");
	for(i=0;i<*n;i++)
	printf("%d ",a[i]);
	printf("\n");
	for(i=0;i<*n-1;i++)
	{
		min=i;
		for(j=i+1;j<*n;j++)
		{
		if(a[min]>a[j])
		min=j;
		}
		if(min!=i)
		{
			temp=a[i];
			a[i]=a[min];
			a[min]=temp;
		}
	printf("Iteration %d: ",i+1);
	for(int k=0;k<*n;k++)
	printf("%d ",a[k]);
	printf("\n");
	}
}
int main()
{
	int a[50],i,ch,cont,n,copy[25];
	printf("Enter n:");
	scanf("%d",&n);
	printf("Enter elements:\n");
	for(i=0;i<n;i++)
		{
		printf("Element %d: ",i+1);
		scanf("%d",&a[i]);
		}
	
	do
	{
	printf("\n\tMENU\n\t1.BUBBLE SORT\n\t2.SELECTION SORT\n");
	printf("Enter choice:");
	scanf("%d",&ch);
	for(i=0;i<n;i++)
	copy[i]=a[i];
	switch(ch)
	{
	case 1:bubble(copy,&n);
		break;
	case 2:selection(copy,&n);
		break;
	default:printf("Invalid choice!");
		
	}
	printf("Enter 1 to continue or 0 to exit: ");
	scanf("%d",&cont);
	}
	while(cont==1);
	return 0;
}
