#include <stdio.h>
#include<stdlib.h>
int main()
 {
	int n, i,*a,min,max;
	printf("Enter size of array: ");
    scanf("%d", &n);
	a=(int *)malloc(n*sizeof(int)) ;
	    if(n)
	{
	printf("Enter %d integers:",n);
	for(i=0;i<n;i++)
	scanf("%d",&a[i]);
	min=max=a[0];
	for(i=1;i<n;i++)
	{
		if(a[i]<min)
		min=a[i];
		if(a[i]>max)
		max=a[i];
	}
	printf("Smallest=%d\nLargest=%d",min,max);
	}
return 0;
}
