#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main()
{
	char a[100],b[100];
	int vow=0,con=0,i;
	printf("Enter a string:");
	scanf("%s",a);
	for(i=0;i<a[i]!='\0';i++)
	{
	b[i]=tolower(a[i]);
	if(b[i]=='a'||b[i]=='e'||b[i]=='i'||b[i]=='o'||b[i]=='u')
	vow++;
	else
	con++;
	}
	printf("vowels=%d",vow);
	printf("\nconsonent=%d",con);
	return 0;
}
