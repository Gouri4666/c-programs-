#include <stdio.h>
#include <stdlib.h>

int main() 
{
	int min,max,n,i;		
	printf("Enter n:");
	scanf("%d",&n);
	int *arr=(int*)malloc(n*sizeof(int));
	int *p=arr;
	for(p=arr;p<arr+n;p++)
	{
	printf("Enter element:");	
	scanf("%d",p);
	}
	max=min=arr[0];
	for(p=arr;p<arr+n;p++)
	{
	if(*p>max)
	max=*p;
	if(*p<min)
	min=*p;
	}
	printf("\nMaximum=%d",max);
	printf("\nMinimum=%d",min);
	return 0;
}
