#include <stdio.h>
#include <stdlib.h>
#include <string.h>
//Reverse a string using pointer

int main() 
{
	char arr[50],i;
	int len;
	char *start,*end,temp,*p;
	p=arr;
	printf("Enter String:");
	scanf("%[^\n]",p);
	len=strlen(arr);
	printf("String length:%d",len);

	printf("\nReversed String:");
	for(p=arr+len-1;p>=arr;p--)
	printf("%c",*p);
	return 0;
}
