#include<stdio.h>
#define N 25
int queue[N],f=-1,r=-1;
void enqueue();
void dequeue();
void display();
int main()
{
	int ch,cont;
	do
	{
	printf("\n\tMENU\n\t1.Enqueue\n\t2.Dequeue\n\t3.Display\n");
	printf("Enter choice:");
	scanf("%d",&ch);
	switch(ch)
	{
		case 1:enqueue();
			break;
		case 2:dequeue();
			break;
		case 3:display();
			break;
		default:printf("Invalid");
	}
	printf("\nEnter 1 to continue or 0 to exit: ");
	scanf("%d",&cont);
	}
	while(cont==1);
return 0;
}
void enqueue()
{
	int item;
	if(r==N-1)
	printf("Overflow!");
	else
	{
	printf("Enter item to insert:");
	scanf("%d",&item);
	if(f==-1)f=0;
	r++;
	queue[r]=item;
	printf("%d inserted",queue[f]);
	}
}
void dequeue()
{
	int item;
	if(f==-1 || f>r)
	printf("Underflow!");
	else
	{
	item=queue[f];
	f++;
	printf("%d removed",item);
	}
}

void display()
{
	if(f==-1 || f>r)
	printf("Empty!");
	else
	{
	printf("Queue elemets: ");
	for(int i=f;i<=r;i++)
	printf("%d ",queue[i]);
	}
}
