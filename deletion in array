#include<stdio.h>
#include<stdlib.h>
int beginning(int a[],int n)
{
int item=a[0];
for(int i=1;i<=n-1;i++)
a[i-1]=a[i];
n--;
printf("%d deleted",item);

printf("\nArray after deletion:");
for(int i=0;i<n;i++)
printf("%d ",a[i]);
return n;
}
int end(int a[],int n)
{
int item=a[n-1];
n--;
printf("%d deleted",item);
printf("\nArray after deletion :");
for(int i=0;i<n;i++)
printf("%d ",a[i]);
return n;
}
int position(int a[],int n)
{
int pos;
printf("Enter position: ");
scanf("%d",&pos);
if(pos<1 || pos>=n+1)
printf("Deletion not possible");
else
{
int item=a[pos-1];
for(int i=pos-1;i<=n-1;i++)
a[i]=a[i+1];
n--;
printf("%d deleted",a[pos-1]);
printf("Array :");
for(int i=0;i<n;i++)
printf("%d ",a[i]);
}
return n;
}
void display(int a[],int n)
{
if(n==0)
printf("Array is empty!");
else
{
printf("Array: ");
for(int i=0;i<n;i++)
printf("%d ",a[i]);
}
}
int main()
{
	int n,i,a[100],ch,cont;
	printf("Enter n:");
	scanf("%d",&n);
	printf("Enter Elements:\n");
	for(i=0;i<n;i++)
	{
	printf("Element %d: ",i+1);
	scanf("%d",&a[i]);
	}
	do
	{
		printf("\tMENU\n\t1.Deletion at beginning\n\t2..Deletion at position\n\t3.Deletionert at end\n\t4.Display\n\t5.Exit\n");
	printf("Enter choice: ");
	scanf("%d",&ch);
	switch(ch)
	{
		case 1:n=beginning(a,n);
				break;
		case 2:n=position(a,n);
			break;
		case 3:n=end(a,n);
			break;
		case 4:display(a,n);
			break;
		case 5:printf("Exiting Program..");
				exit(0);
				break;
	default:printf("Invalid choice");
	}
	printf("\nEnter 1 to continue or 0 to exit: ");
	scanf("%d",&cont);
	}
	while(cont);
	return 0;
}
