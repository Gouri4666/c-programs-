#include<stdio.h>
#define N 25
int stack[N];
int top=-1;
void push()
{
	int item;
	if(top==N-1)
	printf("Overflow!");
	else
	{
		printf("Enter item to insert:");
		scanf("%d",&item);
		top++;
		stack[top]=item;
		printf("%d inserted",stack[top]);
	}
	
}
void pop()
{
	if(top==-1)
	printf("Stack is empty");
	else
	{
	int item=stack[top];
	top--;
	printf("%d removed",item);
	}
}
void peek()
{
	if(top==-1)
	printf("stack is empty!\n");
	else
	printf("Top most item=%d",stack[top]);
}
void display()
{
	if(top==-1)
	printf("stack is empty!\n");
	else
	{
	printf("Elements from top to bottom:");
	for(int i=top;i>=0;i--)
	printf("%d ",stack[i]);
	}
}
int main()
{
	int i,ch,cont;
	
	do
	{
	printf("\tMENU\n\t1.Push\n\t2.Pop\n\t3.Peek\n\t4.Display\n");
	printf("Enter choice:");
	scanf("%d",&ch);
	switch(ch)
	{
		case 1:push();
			break;
		case 2:pop();
			break;
		case 3:peek();
			break;
		case 4:display();
			break;
		
		default:printf("Invalid input!");

	}
	printf("\nEnter 1 to continue or 0 to exit:");
	scanf("%d",&cont);
	}
	while(cont==1);
	return 0;
}
